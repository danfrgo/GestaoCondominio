@model IEnumerable<GestaoCondominios.BLL.Models.Veiculo>


<div class="collection with-header">
    <div class="collection-header">
        <div class="row">
            <div class="col s10">
                <h6>Os meus veículos</h6>
            </div>
            <div class="col s2">
                <!-- tooltip para explicar para que serve o botao-->
                <a asp-controller="Veiculos" asp-action="Create" class="waves-effect waves-light btn-small btn-floating green darken-4 tooltip" data-position="right" data-tooltip="Novo veículo">
                    <i class="material-icons">add</i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="collection-item">
    <table class="striped highlight reponsive">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VeiculoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Matricula)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VeiculoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matricula)
                    </td>
                    <td>
                        <a asp-controller="Veiculos" asp-action="Edit" asp-route-id="@item.VeiculoId" class="btn-floating btn-small blue darken-4 tooltip" data-position="right" data-tooltip="Atualizar veículo">
                            <i class="material-icons">mode_edit</i>
                        </a>

                        <a onclick="ConfirmarExclusao(@item.VeiculoId, '@item.Nome')" class="btn-floating btn-small red darken-4 tooltip modal-trigger" data-target="modal" data-position="right" data-tooltip="Excluir veículo">
                            <i class="material-icons">delete_forever</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
