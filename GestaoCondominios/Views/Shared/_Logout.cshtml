@using Microsoft.AspNetCore.Identity;
@using GestaoCondominios.BLL.Models;
@inject SignInManager<Utilizador> SignInManager;




@if (SignInManager.IsSignedIn(User))
    {
    <form asp-action="Logout" asp-controller="Utilizadores" id="formularioLogout">
        <ul>
            <li>
                <a class="nav-link white-text" style="cursor:pointer;" onclick="document.getElementById('formularioLogout').submit()";>Logout</a>
            </li>
        </ul>
    </form>
    }

