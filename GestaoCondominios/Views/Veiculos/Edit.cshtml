@model GestaoCondominios.BLL.Models.Veiculo

@{
    ViewData["Title"] = "Atualização do veículo " + Model.Nome;
}

<div class="collection with-header">
    <form asp-action="Edit">
        <div class="collection-header blue darken-3">
            <h6 class="white-text">Atualização do veículo @Model.Nome;</h6>
        </div>

        <div class="collection-item">
            <div asp-validation-summary="ModelOnly" class="red-text text-darken-4"></div>

            <input type="hidden" asp-for="VeiculoId" />

            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Nome" class="validate" id="nome" />
                    <label asp-for="Nome" id="nome"></label>
                    <span class="red-text text-darken-4" asp-validation-for="Nome"></span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Marca" class="validate" id="marca" />
                    <label asp-for="Marca" id="marca"></label>
                    <span class="red-text text-darken-4" asp-validation-for="Marca"></span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Cor" class="validate" id="cor" />
                    <label asp-for="Cor" id="cor"></label>
                    <span class="red-text text-darken-4" asp-validation-for="Cor"></span>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Matricula" class="validate" id="matricula" />
                    <label asp-for="Matricula" id="matricula"></label>
                    <span class="red-text text-darken-4" asp-validation-for="Matricula"></span>
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="UtilizadorId" />

        <div class="collection-item">
            <button type="submit" class="btn-small blue darken-3">Atualizar</button> &emsp;
            <a asp-action="MinhasInformacoes" asp-controller="Utilizadores">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.clodflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
    <script src="~/js/IniciarMascaras.min.js"></script>
}